<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Web Cobranza</title>

    @*BOOTSTRAP 5 CSS*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    @*DATATABLES*@
    <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/fixedheader/3.3.2/css/fixedHeader.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.4.1/css/responsive.dataTables.min.css" rel="stylesheet" />

    @*BOOTSTRAP 5 SELECT2*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.rtl.min.css" />


    <link rel="stylesheet" href="~/css/site.css" />

    @await RenderSectionAsync("styles", required: false)

</head>
<body style="background-color:whitesmoke ">
    <header class="border-bottom text-muted" style="background-color:cornflowerblue">
        <nav class="navbar navbar-expand-sm navbar-dark" style="background-color:cornflowerblue">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <div class="col-lg-4 d-none d-lg-flex">
                        <img src="~/Img/Logo_GNA_Login.png" alt="Garcia Nadal" class="w-100 rounded-t-5 rounded-tr-lg-0 rounded-bl-lg-5" />
                    </div>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a class="nav-link h5" asp-area="" asp-controller="Cobranza" asp-action="Index">Cobranza</a>
                        </li>

               

                    </ul>
                </div>
                <form method="post" asp-controller="Home" asp-action="CerrarSession" class="form-inline my-2 my-lg-0">
                    <button class="btn btn-outline-danger my-2 my-sm-0 col-12" data-toggle="tooltip" data-placement="bottom" title="Cerrar Sesión" type="submit"> <i class="fas fa-sign-out-alt"></i> Salir </button>
                </form>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted" style="background-color:cornflowerblue">

        <div class="container-fluid text-white">
            <string>Usuario : </string> @ViewData["Log_Usuario"] | <string>Perfil : </string> @ViewData["Log_Perfil"]
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&copy;COPYRIGHT @DateTime.Now.ToString("yyyy")  "GARCIA NADAL". ALL RIGHT RESERVED
        </div>



    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @*Bootstrap 5*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    @*Jquery*@
    <script src="https://code.jquery.com/jquery-3.7.0.slim.min.js" integrity="sha256-tG5mcZUtJsZvyKAxYLVXrmjKBVLd6VpVccqz/r4ypFE=" crossorigin="anonymous"></script>


    @*datatables*@
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.3.2/js/dataTables.fixedHeader.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.4.1/js/dataTables.responsive.min.js"></script>

    @*BOOTSTRAP 5 SELECT2*@
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
