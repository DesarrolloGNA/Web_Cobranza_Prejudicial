<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Web Cobranza</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>


    <link rel="stylesheet" href="~/css/site.css" />

    <style>

        .container {
            top: 50%;
            position: center;
            display: flex;
            justify-content: center;
            align-items: center;
        }

    </style>

</head>
<body style="background-color:azure">

    <header class="border-bottom text-muted" style="background-color:cornflowerblue">
        <div class="container text-white">
            Sistema Web de Cobranza
        </div>
    </header>


    <div class="container">

        <div class="mt-4 p-5 text-white rounded">
            <main role="main" class="pb-3">

                <section class="text-center text-lg-start">

                    <div class="card mb-3">
                        <div class="row g-0 d-flex align-items-center">
                            <div class="col-lg-4 d-none d-lg-flex">
                                <img src="~/Img/Logo_GNA.jpg" alt="Garcia Nadal" class="w-100 rounded-t-5 rounded-tr-lg-0 rounded-bl-lg-5" />
                            </div>
                            <div class="col-lg-8">
                                <div class="card-body py-5 px-md-5">

                                    @RenderBody()

                                </div>
                            </div>
                        </div>
                    </div>
                </section>

            </main>

        </div>

    </div>

    <footer class="border-top footer text-muted" style="background-color:cornflowerblue">
        <div class="container text-white">
            &copy;COPYRIGHT @DateTime.Now.ToString("yyyy") "GARCIA NADAL". ALL RIGHT RESERVED
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
