                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    <strong><label id="GestionJudicialAlertaCabecera"></label></strong> <label id="GestionJudicialAlertaMensaje"></label>
                </div> *@




            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" title="Click aqui para cerrar Pop-Up.">Cerrar</button>
            </div>
        </div>
    </div>
</div>













<script>

    let filtroSeleccionado = "";

    document.querySelectorAll('.dropdown-item').forEach(item => {
        item.addEventListener('click', function (e) {
            e.preventDefault();

            // Texto visible
            const texto = this.textContent;

            // Valor interno
            filtroSeleccionado = this.getAttribute("data-value");

            // Cambia el texto del botón
            document.getElementById("TIPO_BUSQUEDA").textContent = texto;
        });
    });

</script>