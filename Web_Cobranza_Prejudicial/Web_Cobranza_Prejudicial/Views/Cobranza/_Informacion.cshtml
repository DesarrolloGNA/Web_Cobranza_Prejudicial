@model Web_Cobranza_Prejudicial.Models.Entities.INFORMACION


<style>
    .scrolling-table-container_Alertas {
        height: 80px;
        overflow-y: scroll;
        overflow-x: hidden;
    }

    .scrolling-table-container_Campañas {
        height: 80px;
        overflow-y: scroll;
        overflow-x: hidden;
    }

    .scrolling-table-container_Datos_Demograficos {
        height: 195px;
        overflow-y: scroll;
        overflow-x: hidden;
    }


</style>



<div class="row">
    <div class="col-sm-3">

        <div class="card" style="height: 260px;font:10px;">
            <div class="card-body">
                <h5 class="card-title">Datos Personales</h5>
                <hr />
                <p class="card-text">Mandante: <strong>@Model.DATOS_PERSONALES.NOMBRE_MANDANTE</strong>   </p>
                <p class="card-text">Nombre: <strong>@Model.DATOS_PERSONALES.NOMBRE_TUTOR</strong></p>
                <p class="card-text">Rut Tutor: <strong>@Model.DATOS_PERSONALES.RUT_TUTOR.ToString("N0")-@Model.DATOS_PERSONALES.DV_TUTOR</strong></p>
                <p class="card-text">Nombre Alumno: <strong>@Model.DATOS_PERSONALES.NOMBRE_ALUMNO</strong></p>
                <p class="card-text">Rut Alumno:
                    @if (Model.DATOS_PERSONALES.RUT_ALUMNO > 0)
                        {
                            <strong>
                            @($"{Model.DATOS_PERSONALES.RUT_ALUMNO:N0}-{Model.DATOS_PERSONALES.DV_ALUMNO}")
                            </strong>
                        }
                </p>
                <p class="card-text">Estado Juicio: <strong>@Model.DATOS_PERSONALES.ESTADO_JUICIO</strong></p>
                <p class="card-text">Estado Gestion: <strong>@Model.DATOS_PERSONALES.ESTADO_GESTION</strong></p>
            </div>
        </div>

    </div>

    <div class="col-sm-3">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Alertas</h5>
                <div class="scrolling-table-container_Alertas">
                    Sin Alertas.
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Campañas</h5>
                <div class="scrolling-table-container_Campañas">
                    Sin Campañas.
                </div>
            </div>
        </div>

    </div>

    <div class="col-sm-3">
        <div class="card" style="height: 260px;">
            <div class="card-body">
                <h5 class="card-title">Telefonos</h5>
                <div class="scrolling-table-container_Datos_Demograficos">

                    <table class="table table-striped table-bordered table-hover overflow-auto" name="Lista_Telefonos" id="Lista_Telefonos" style="font-size:10px;">

                        <thead>
                            <tr>
                                <th>Fono</th>
                                <th>Fecha</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Tel in Model.TELEFONOS.ToList())
                            {
                            <tr>
                                <th title="@Tel.OBSERVACION"><strong>@Tel.TELEFONO</strong> </th>
                                    <th>@Tel.FECHA_ACTUALIZACION.ToString("dd-MM-yyyy HH:mm:ss")</th>
                                <th>@Tel.ESTADO_TELEFONO</th>
                            </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>


    <div class="col-sm-3">
        <div class="card" style="height: 260px;">
            <div class="card-body">
                <h5 class="card-title">Email</h5>
                <div class="scrolling-table-container_Datos_Demograficos">

                    <table class="table table-striped table-bordered table-hover overflow-auto" name="Lista_Telefonos" id="Lista_Telefonos" style="font-size:10px;">

                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>Fecha</th>
                                <th>Estado</th>
                      
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Ema in Model.EMAILS.ToList())
                            {
                                <tr>
                                    <th title="@Ema.ID_EMAIL"><strong>@Ema.EMAIL</strong></th>
                                    <th>@Ema.FECHA_ACTUALIZACION.ToString("dd-MM-yyyy HH:mm:ss")</th>
                                    <th>@Ema.ESTADO_EMAIL</th>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>


</div>

